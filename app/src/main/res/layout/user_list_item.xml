<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UserListFragment.UserListRecyclerViewAdapter">

    <data>
        <variable
            name="user"
            type="com.devteam.jetpackusers.io.model.User" />

        <variable
            name="callback"
            type="com.devteam.jetpackusers.ui.userlist.UserListClickListner" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/userlist_item_margin"
        android:onClick="@{() -> callback.onUserClicked(user.id)}"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.id}"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="@{user.firstName+` `+user.lastName}"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="@{user.email}"
            android:textAppearance="?attr/textAppearanceListItem" />
    </LinearLayout>
</layout>